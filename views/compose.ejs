<%- include('partials/header'); -%>
<h1>Compose</h1>
<form action="/compose" method="post">
    <label for="title" class="form-label">Title</label>
    <input type="text" class="form-control" id="title" name="postTitle">
    <label for="contentPost" class="form-label">Post</label>
    <textarea class="form-control" id="contentPost" rows="5" name="postBody"></textarea>
    <button type="submit" class="btn btn-primary" style="margin-top: 10px;">Publish</button>
</form>
<%- include('partials/footer'); -%>
